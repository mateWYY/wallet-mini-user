<script>
    import wepy from 'wepy'
    import {getVolSearch, getVolSearchClear} from '../../util/util'
    export default class search extends wepy.page {
        config = {
          backgroundTextStyle: 'light',
          navigationBarBackgroundColor: '#fff',
          navigationBarTitleText:'搜索',
          navigationBarTextStyle: 'black'
        };
        data = {
          inputVal: '',
          commodities: false,
          searchhots: [],
          searchLogs: []
        };
        methods = {
          // 监听input输入框//
          closeInputVal () {
            this.inputVal = ''
          },
          toSearch(e) {
            this.inputVal = e.detail.value
            wepy.navigateTo({
              url: `foodsList?vcn=${this.inputVal}`
            })
          },
          roast(vcn){
            wx.navigateTo({
              url: `foodsList?vcn=${vcn}`
            })
          },
          inputTyping (e) {
            this.inputVal = e.detail.value
        },
          //开始搜索关键词、福袋列表
          souValue(e) {
            wepy.navigateTo({
              url: `foodsList?vcn=${this.inputVal}`
            })
          },
          //清除缓存历史并关闭历史搜索
          clearSearchStorage () {
            getVolSearchClear({method:'POST'}).then(res =>{
              this.getVolSearch()
              let that = this;
              that.data.searchLogs = [];
              that.setData({
                searchLogs: that.data.searchLogs
              });
              wx.setStorage({
                key: 'searchLogs',
                data: that.data.searchLogs
              });
              this.$apply()
            })
          }
        };
      // 获取历史搜索,热门搜索///
      getVolSearch(){
        getVolSearch().then(res =>{
          console.log(res.data)
          this.searchLogs = res.data.searchLogs;
          this.searchhots = res.data.searchHots;
          this.$apply()
        });
      }
        events = {};
      onShow(){
        this.getVolSearch()
      }
        onLoad() {
        }
    }
</script>



