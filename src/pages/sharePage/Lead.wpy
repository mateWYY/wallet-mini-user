<script>
  import wepy from 'wepy';
  import {getDrawlogs} from '../../util/util'
  export default class Lead extends wepy.page {
    config = {
      backgroundTextStyle:'light',
      navigationBarBackgroundColor:'#fe2964',
      // navigationBarTitleText: '分享',
      navigationBarTextStyle: 'white'
    };
    data = {
      configs:true,
      showView:true,
      telephone:'',
      plane: {},
      userWallets: [],
      isCheck:true,
      ishidden:false,
      message:'',
      showAll: false
    };
    computed = {
      userWallet () {
        if (this.userWallets.length > 0) {
          if (this.showAll) {
            return this.userWallets
          } else {
            return this.userWallets.filter((item, index) => {
              return index < 5
            })
          }
        }
      }
    }
    methods = {
      toggleLook() {
         this.showAll = true
      },
      showCheck(){
        this.isCheck = false;
        this.ishidden = true
      },
      levelBuy(id, event){
        wx.navigateTo({
          url: '../../pages/payment/bagBuy?id='+id
        })
      },
      bindKeyInput(e){
        this.inputValue = e.detail.value;
        if(this.inputValue.length!==''){
          this.telephone = true;
        }else{
          this.telephone = false;
        }
      },
      shareClose(){
        let that= this;
        that.showView=(!that.data.showView)
      },
      shareIcon(){
        let that= this;
        that.PhoneView=(!that.data.PhoneView)
      }
    };
    getDrawlogs() {
      const id = this.plane.walletId
      getDrawlogs({data:{walletId:id}}).then(res => {
        this.userWallets = res.data.userWallets
        this.$apply()
      })
    }
    onLoad(opt) {
      this.message = this.$parent.globalData.message;
      if(this.message!==''){
        this.configs = false;
      }else{
        this.configs = true;
      }
      let info = opt.val;
      console.log(info);
      info ? this.plane = JSON.parse(info) : this.plane = '';
      // const plc=JSON.parse(opt.val);
      // this.plane = plc
      this.getDrawlogs()
    };
  }
</script>



