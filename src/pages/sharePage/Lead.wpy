      <view class="Lady">{{plane.store.name}}</view>
      <view class="{{configs? 'congrat': 'hide'}}">恭喜你抢得红包!</view>
      <view class="{{configs? 'ten': 'hide'}}">{{plane.amount}}<text class="yuan">元</text></view>
      <view class="{{configs? 'endTime': 'hide'}}">红包{{plane.effectiveEndAt}}到期(满{{plane.attainAmount}}可用)</view>
