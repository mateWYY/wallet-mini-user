<script>
  import wepy from 'wepy';
  import {getCommonChildFour, getCommonBanner, getFindWallet, getVolDraw ,getVolRemaining} from '../util/util'
  import Delicious from '../components/Delicious';
  import loadmore from '../components/loadmore';
  export default class delicacy extends wepy.component {
    data = {
      scrollLeft: 0, // tab标题的滚动条位置
      walletPerage: {
        'per-page': 10,
        page: 1
      },
      cityId: {},
      FindWallet: [],
      imags: [],
      ActiveImags: [],
      childFours: [],
      haveMore: true,
      loading: true,
      indicatorDots: false,
      autoplay: false,
      interval: 5000,
      duration: 1000,
      childFour: {},
      centeryId: '',
      Draw: [],
    };
    components = {
      Delicious: Delicious,
      loadmore
    };
    getCommonChildFour() {
      const id = this.category;
      getCommonChildFour({id:id, data:{type:1}}).then(res => {
        this.childFours = res.data;
        this.$apply()
      });
    }

    // 今日福袋数据
    getVolRemaining(...params){
      getVolRemaining({cityId:this.$parent.$parent.globalData.cityId.id ,data:{...params[0]}}).then(res => {
        this.cityId = res.data;
        this.$apply()
      })
    }
    //领取记录
    getVolDraw(...params){
      const id = this.category;
      getVolDraw({data:{categoryId: id, 'per-page': 3, page: 1,login: 1, ...params[0]}}).then(res => {
        this.Draw = res.data;
        this.$apply()
      })
    }
    getCommonAlls() {
      const id = this.category;
      const {latitude, longitude} = this.$parent.$parent.globalData.locationMap
      if (latitude && longitude) {
        const data = {};
        if (parseInt(id) !== 0){
          data.categoryId = id
        }
        const params = {
          lat: latitude,
          lon: longitude,
          ...data
        };
        this.getBanners(params);
        this.getActiveBanner(params);
        this.getVolRemaining(params);
        this.getVolDraw(params);
        this.getFindWallet(true)
      } else {
        setTimeout(() => {
          this.getCommonAlls()
        }, 1000)
      }
    }
    pullBottom () {
      setTimeout(() => {
        if (this.haveMore) {
          this.getFindWallet();
        }
        this.$apply()
      }, 1000)
    }
    // 获取banner
    getBanners(...params) {
     const cityId = this.$parent.$parent.globalData.cityId.id || ''
      getCommonBanner({
        data: {
          cityId: cityId,
          type: 1,
          ...params[0]
        }
      }).then(res => {
        this.imags = res.data;
        this.$apply()
      })
    }
    getActiveBanner(...params){
      const cityId = this.$parent.$parent.globalData.cityId.id || ''
      getCommonBanner({
        data: {
          cityId: cityId,
          type: 3,
          ...params[0]
        }
      }).then(res => {
        this.ActiveImags = res.data;
        this.$apply()
      })
    }
    // 发现福袋
    getFindWallet(clear) {
      const id = this.category;
      const {latitude, longitude} = this.$parent.$parent.globalData.locationMap
      const cityId = this.$parent.$parent.globalData.cityId.id || ''
      if (latitude && longitude) {
        const data = {
          lat: latitude,
          lon: longitude
        };
        if (parseInt(id) !== 0) {
          data.categoryId = id
        }
        getFindWallet({
          cityId: cityId,
          data: {
            ...this.walletPerage,
            ...data
          }
        }).then(res => {
          const data = res.data;
          if (!data.length) {
            this.loading = false
          } else {
            this.loading = true
          }
          if (data.length === this.walletPerage['per-page']) {
            this.haveMore = true;
            this.walletPerage.page += 1
          } else {
            this.haveMore = false
          }
          if (clear) {
            this.FindWallet = data
          } else {
            this.FindWallet = this.FindWallet.concat(data)
          }
          this.$apply()
        })
      }
    }

    methods = {
      // 去买单
      buysImmedly(id){
        wx.navigateTo({
          url: './payment/immediately?id='+id
        })
      },
      //事件处理//
      presentPage(){
        wx.navigateTo({
          url: '../pages/present'
        })
      },
      //进入店铺详情
      footprint(id){
        wx.navigateTo({
          url: './shopDetail/store?id='+id
        });
      },
      getSelect (id) {
        if (parseInt(id) !== 0) {
          this.category = id
        } else {
          this.category = '0'
        }
        this.walletPerage.page = 1;
        this.getCommonAlls();
        this.getCommonChildFour();
        // this.getVolDraw()
      },
      downDetail(id){
        wx.navigateTo({
          url: './shopDetail/store?id='+id
        })
      },
      // 餐饮美食
      Restaurant(id) {
        const categoArr = this.$parent.Catego || []
        let parentCategory = {}
        categoArr.forEach((item, index) => {
          if (item.id === this.category) {
            parentCategory = item
          }
        });
        const parentCategorys = JSON.stringify(parentCategory)
        wepy.navigateTo({
          url: `./mine/streetFood?vcd=${parentCategorys}&id=${id}`
        })
      },
      // 四个分类
      // getId(id) {
        //分类banner图
        // getCommonBanner({data:{type: 1, categoryId: id, lat: 31.7792, lon: 117.1607029}}).then(res => {
        //   this.imags = res.data;
        //   console.log(this.imags);
        //   this.$apply()
        // });
        // 发现福袋
        // getFindWallet({data: {'per-page': 10, page: 1, lat: 31.7792, lon: 117.1607029, categoryId: id}}).then(res => {
        //   this.FindWallet = res.data;
        //   this.$apply()
        // })
      // }
    };
    props = {
      category: {
        type: Number,
        twoAway: true,
        default: 0
      }
    };
    onShow(){
      this.getCommonAlls();
    }
    onLoad(){
      this.getCommonChildFour();
    }
    // Other properties
  }
</script>
