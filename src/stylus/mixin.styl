@import "variable.styl";

linearGradient-button()
  color: #fff
  font-size: 30rpx
  background-image: linear-gradient( -15deg, rgb(51,161,255) 1%, rgb(0,180,254) 100%)

// 扩展点击区域
extend-click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px

nagavition-icon($color)
  border-color: $color
  width: 20rpx
  height: 20rpx
  margin:0 auto
  position:relative
  bottom: 0
  border-right:1px solid $color
  border-bottom:1px solid $color
  transform:rotateZ(-45deg)

nagavition-icon-sm($color)
  border-color: $color
  width: 14rpx
  height: 14rpx
  margin:0 auto
  position:relative
  bottom: 0
  border-right:1px solid $color
  border-bottom:1px solid $color
  transform:rotateZ(-45deg)

container_wrap()
  min-height: 100vh
  background-color: $background-color

weui-loading()
  margin:0 5px;
  width:20px
  height:20px
  display:inline-block
  vertical-align:middle
  animation: loading  1s steps(12) infinite;
  background-size:100%
  background-image: url('data:image/svg+xml;base64,');


